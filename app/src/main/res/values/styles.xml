<?xml version="1.0" encoding="utf-8"?><!-- https://medium.com/@Dimitris_CBR/material-text-field-proper-theming-fcd393f27d97 -->
<resources>

    <style name="AppToolbar" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/black</item>
    </style>

    <style name="TilCustom" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomStart">@dimen/radius_level_3</item>
        <item name="boxCornerRadiusTopStart">@dimen/radius_level_3</item>
        <item name="boxCornerRadiusTopEnd">@dimen/radius_level_3</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/radius_level_3</item>
        <item name="fontFamily">@font/public_sans_medium</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="hintTextAppearance">@style/TvHint</item>
        <item name="errorTextAppearance">@style/TvError</item>
        <item name="counterTextAppearance">@style/TvHint</item>
        <item name="hintTextColor">@color/text_hint</item>
    </style>

    <style name="SpCustom" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="boxCornerRadiusBottomStart">@dimen/radius_level_3</item>
        <item name="boxCornerRadiusTopStart">@dimen/radius_level_3</item>
        <item name="boxCornerRadiusTopEnd">@dimen/radius_level_3</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/radius_level_3</item>
        <item name="fontFamily">@font/public_sans_medium</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="hintTextAppearance">@style/TvHint</item>
        <item name="errorTextAppearance">@style/TvError</item>
        <item name="counterTextAppearance">@style/TvHint</item>
        <item name="hintTextColor">@color/text_hint</item>
    </style>

    <style name="TvError" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/error</item>
        <item name="android:textSize">@dimen/tv_caption</item>
    </style>

    <style name="TvHint" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/text_hint</item>
        <item name="android:textSize">@dimen/tv_body2</item>
    </style>

    <style name="BtnPrimary" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:textSize">@dimen/tv_body1</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/public_sans_bold</item>
        <item name="android:backgroundTint">@color/beak_gold_500</item>
        <item name="cornerRadius">@dimen/radius_circle</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="BtnSecondary" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/text_light</item>
        <item name="android:textSize">@dimen/tv_body1</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/public_sans_bold</item>
        <item name="android:backgroundTint">@color/wingtip_500</item>
        <item name="cornerRadius">@dimen/radius_circle</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="BtnCustom" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">@dimen/tv_body1</item>
        <item name="fontFamily">@font/public_sans_bold</item>
        <item name="cornerRadius">@dimen/radius_circle</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="table_row_item" parent="@android:style/TextAppearance.Small">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_marginRight">@dimen/_1sdp</item>
        <item name="android:layout_marginEnd">@dimen/_1sdp</item>
        <item name="android:paddingStart">@dimen/_10sdp</item>
        <item name="android:paddingLeft">@dimen/_10sdp</item>
        <item name="android:layout_height">@dimen/_30sdp</item>
    </style>

    <style name="table_header" parent="@android:style/TextAppearance.Small">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:background">@color/wingtip_500</item>
        <item name="android:layout_marginRight">@dimen/_1sdp</item>
        <item name="android:layout_marginEnd">@dimen/_1sdp</item>
        <item name="android:paddingStart">@dimen/_10sdp</item>
        <item name="android:paddingLeft">@dimen/_10sdp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
    </style>

</resources>